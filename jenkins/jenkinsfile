pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            environment {
                HOME = "/tmp"
                GOPATH = "/tmp/go"
                GOCACHE = "/tmp/go-build"
                GOMODCACHE = "/tmp/go/pkg/mod"
            }
            steps {
                dir('bugtracker-backend') {
                    sh '''
                        mkdir -p $GOPATH $GOCACHE $GOMODCACHE
                        go test -v ./...
                    '''
                }
            }
        }
    }
}
